<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="catalog_entity_attribute_save_after">
        <observer
            name="create_tweakwise_slugs_after_save_attribute"
            instance="Tweakwise\Magento2Tweakwise\Observer\CreateTweakwiseSlugsAfterSaveAttribute"
        />
    </event>
    <event name="sales_order_place_after">
        <observer name="product_purchase_observer" instance="Tweakwise\Magento2Tweakwise\Observer\TweakwiseCheckout" />
    </event>
    <event name="checkout_cart_product_add_after">
        <observer name="Tweakwise_Magento2Tweakwise_Observer_Event_SendAddToCartEvent"
                  instance="Tweakwise\Magento2Tweakwise\Observer\Event\SendAddToCartEvent"/>
    </event>
    <event name="wishlist_add_product">
        <observer name="Tweakwise_Magento2Tweakwise_Observer_Event_SendAddToWishlistEvent"
                  instance="Tweakwise\Magento2Tweakwise\Observer\Event\SendAddToWishlistEvent"/>
    </event>
</config>
